# OH-MY-ZSH THEME SETTING

if [[ $OSTYPE  = darwin* ]]; then
    # Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.config/zsh/.zshrc.
    # Initialization code that may require console input (password prompts, [y/n]
    # confirmations, etc.) must go above this block; everything else may go below.
#    if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
#      source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
#    fi
#
#    ZSH_THEME="powerlevel10k/powerlevel10k"
#  
#    # To customize prompt, run `p10k configure` or edit ~/.config/zsh/.p10k.zsh.
#    [[ ! -f ~/.config/zsh/.p10k.zsh ]] || source ~/.config/zsh/.p10k.zsh

  
    ZSH_THEME="spaceship"
    ## Specific settings for spaceship theme
    SPACESHIP_PROMPT_ASYNC=0
    SPACESHIP_PROMPT_ORDER=(
      host
      dir           # Current directory section
      git           # Git section (git_branch + git_status)
      char
    )
    
    SPACESHIP_RPROMPT_ORDER=(
      node
      docker
      exec_time
    )
    
    SPACESHIP_PROMPT_ADD_NEWLINE=false
    SPACESHIP_HOST_SHOW_FULL=true
    SPACESHIP_GIT_BRANCH_COLOR="blue"
    SPACESHIP_NODE_COLOR="cyan"
 
else    
    ZSH_THEME="spaceship"
    ## Specific settings for spaceship theme
    SPACESHIP_PROMPT_ORDER=(
      host
      dir           # Current directory section
      git           # Git section (git_branch + git_status)
      char
    )
    
    SPACESHIP_RPROMPT_ORDER=(
      node
      docker
      python
      exec_time
    )
    
    SPACESHIP_PROMPT_ADD_NEWLINE=false
    SPACESHIP_HOST_SHOW_FULL=true
    SPACESHIP_GIT_BRANCH_COLOR="blue"
    SPACESHIP_NODE_COLOR="cyan"
    SPACESHIP_PYTHON_SHOW=true
    SPACESHIP_PYTHON_ASYNC=true
    
fi

# OH-MY-ZSH SETTINGS 
ENABLE_CORRECTION="true"
    
# OH-MY-ZSH PLUGINS
plugins=(
  	zsh-autosuggestions
    zsh-syntax-highlighting
    autojump
) 

# activate plugins
source $ZSH/oh-my-zsh.sh


# ZSH-AUTOSUGGESTIONS
## key bindings 
## -----------
bindkey '^ ' autosuggest-accept # control-space to autocomplete suggestion

# ZSH-SYNTAX-HIGHLIGHTING
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor)
#
